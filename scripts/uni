#!/bin/bash

# University subject jumper using fzf
# Usage: uni

set -e

subject_dir=$(find ~/data/school/uni -maxdepth 1 -type d -name "sem*" | sed 's|.*/||' | fzf --prompt="Select subject: " --height=40% --reverse)

if [[ -n $subject_dir ]]; then
    cd ~/data/school/uni/$subject_dir && exec $SHELL
fi